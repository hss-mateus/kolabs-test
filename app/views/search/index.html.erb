<%= form_with(url: '/', method: 'get') do %>
  <%= text_field_tag(:q) %>
  <%= submit_tag('Search') %>
<% end %>


<% if @matches.nil? %>

  Type above to search

<% elsif @matches.empty? %>

  Nothing found

<% else %>

  <% @matches.each do |match| %>

    <% if match['media_type'] == 'movie' %>
      <%= match['title'] %>
    <% else  %>
      <%= match['name'] %>
    <% end%>

    <br />
  <% end %>

<% end %>
