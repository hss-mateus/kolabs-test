<h2>Local movies</h2>

<%= link_to 'New', new_movie_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Score</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |m| %>
      <tr>
        <td><%= m.title %></td>
        <td><%= m.score %></td>
        <td>
          <%= link_to 'Edit', edit_movie_path(m) %>
          <%= link_to 'Delete', m, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
